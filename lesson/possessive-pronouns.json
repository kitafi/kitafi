{
	"title": "Possessive Pronouns",
	"description": "Use words that demonstrate ownership and use them to form questions to ask other people.",
	"image": "drought.jpg",
	
	"unit": "basic-conversation",

	"lesson": [
		{
			"instruction": "Here is the noun for ",
			"english": "name",
			"swahili": "jina"
		},
		{
			"english": "my name",
			"swahili": "jina langu"
		},
		{
			"type": "interactive",
			"english": "My name is __name__.",
			"swahili": "Jina langu ni __name__."
		},
		{
			"english": "your name",
			"swahili": "jina lako"
		},
		{
			"type": "interactive",
			"english": "Your name is __name__.",
			"swahili": "Jina lako ni __name__."
		},
		{
			"instruction": "Notice the word order is the reverse of English.",
			"english": "What is it?",
			"swahili": "Ni nani?"
		},
		{
			"english": "What is your name?",
			"swahili": "__=Jina lako__ ni nani?"
		},
		{
			"instruction": "Swahili does not have different pronouns for gender",
			"english": "his/her name",
			"swahili": "jina lake"
		},
		{
			"english": "What is his name?",
			"swahili": "__=Jina lake ni nani__?"
		}
	]
}
