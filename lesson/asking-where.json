                    "Italy": "Italia",
                    "Japan": "Japani",
                    "Mozambique": "Msumbiji",
                    "Netherlands": "Uholanzi",
                    "Russia": "Urusi",
                    "Singapore": "Singapuri",
                    "Solomon Islands": "Visiwa vya Solomon",
